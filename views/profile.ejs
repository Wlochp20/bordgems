<%- contentFor('head') %>
    <meta charset="UTF-8">
    <title>Document</title>
    <link rel="stylesheet" href="/css/profile.css">
    
<%- contentFor('headerInside') %>
    <div class="user">
        <div class="avatar"></div>
        <div class="info">
            <p class="name"><%= locals.user.name %> <span class="hash"><%= locals.user.hash %></span></p>
            <p class="mail"><%= locals.user.email %></p>
        </div>
    </div>
    <% if(!locals.ownProfile && logged) { %>
        <button class="follow">
            <% if (locals.follows) { %>
                Odobserwuj
            <% } else { %>
                Obserwuj
            <% } %> 
        </button>
    <% } %>

<%- contentFor('body') %>
    <main>
        <% if (locals.ownProfile) { %>
            <button class="addFollow">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512"><!-- Font Awesome Pro 5.15.4 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) -->
                    <path d="M624 208h-64v-64c0-8.8-7.2-16-16-16h-32c-8.8 0-16 7.2-16 16v64h-64c-8.8 0-16 7.2-16 16v32c0 8.8 7.2 16 16 16h64v64c0 8.8 7.2 16 16 16h32c8.8 0 16-7.2 16-16v-64h64c8.8 0 16-7.2 16-16v-32c0-8.8-7.2-16-16-16zm-400 48c70.7 0 128-57.3 128-128S294.7 0 224 0 96 57.3 96 128s57.3 128 128 128zm89.6 32h-16.7c-22.2 10.2-46.9 16-72.9 16s-50.6-5.8-72.9-16h-16.7C60.2 288 0 348.2 0 422.4V464c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5 48-48v-41.6c0-74.2-60.2-134.4-134.4-134.4z"/>
                </svg>
                Zaobserwuj kogoś
            </button>
        <% } %>
        <h2>Osoby które obserwujesz [<%= JSON.parse(locals.user.follows).length %>]</h2>
        <div class="follows">
            <% for( let i = 0; i < JSON.parse(locals.user.follows).length; i++ ) { %>
                <a href="/profile/<%= JSON.parse(locals.user.follows)[i].split("#")[0] %>">
                    <div class="profile"></div>
                    <%= JSON.parse(locals.user.follows)[i] %>
                </a>
            <% } %>
        </div>
        <script src="/js/alerts.js"></script>
        <script src="/js/follows.js"></script>
    </main>